# Environment Configuration Example
# Copy this to .env and fill in your actual values
# NEVER commit .env to version control!

# Environment
ENVIRONMENT=development  # development, staging, production

# Database (PostgreSQL or SQLite)
# For production: Use PostgreSQL
# For development: SQLite is fine
DATABASE_URL=sqlite:///./syncveil_dev.db

# JWT Authentication
# PRODUCTION: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=dev-secret-change-in-production-to-random-256-bit-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Email Verification (REQUIRED FOR PRODUCTION)
# Users must verify their email before first login
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_EXPIRE_HOURS=24
AUTO_VERIFY_EMAIL=false  # PRODUCTION: Never set to true

# Email Service (Brevo Transactional Email API)
# REQUIRED for email verification in production
BREVO_API_KEY=
SMTP_FROM=noreply@syncveil.com
EMAIL_FROM_NAME=SyncVeil

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Password Hashing (Argon2)
PASSWORD_HASH_TIME_COST=2
PASSWORD_HASH_MEMORY_COST=65536
PASSWORD_HASH_PARALLELISM=1

# Rate Limiting
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_OTP=3/minute
RATE_LIMIT_SIGNUP=2/minute

# MongoDB Atlas (Optional - for additional data features)
# Get from MongoDB Atlas: https://cloud.mongodb.com/
MONGO_URI=
MONGO_DB_NAME=syncveil

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:8000

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/syncveil.log

